Table {
    Name: "Entity info";
    BackgroundColor: [32 0 128 192];
    Position: [20 20];
    VerticalAlignment: Alignment.Bottom;
    ColumnCount: 2;
    Margin: [10 2];
    Width: 300;
    Padding: [10 5];

    Children: [
        Static { Text: "Name"; };
        Static {
            Bindings: [
                {
                    Source: "Name";
                    Target: "Text";
                    DefaultValue: "[none]";
                }
            ];
        };

        Static { Text: "Class"; };
        Static {
            Bindings: [
                {
                    Source: "ClassName";
                    Target: "Text";
                }
            ];
        };

        Static { Text: "File"; };
        Static {
            Bindings: [
                {
                    Source: "ClassFile";
                    Target: "Text";
                }
            ];
        };

        Static { Text: "ID"; };
        Static {
            Bindings: [
                {
                    Source: "Id";
                    Target: "Text";
                }
            ];
        };

        Static { Text: "Is Alive"; };
        Static {
            Bindings: [
                {
                    Source: "IsAlive";
                    Target: "Text";
                }
            ];
        };

        #*
        Static { Text: "Active Animations"; };
        Static {
            Bindings: [
                {
                    Source: "ActiveAnimations";
                    Target: "Text";
                }
            ];
        };
        *#

        # actor properties

        Static { Text: "Health"; };
        List {
            Name: "hp";
            Direction: Direction.Horizontal;
            Margin: 5;
            Children: [
                Static {
                    Bindings: [
                        {
                            Source: "CurrentHealth";
                            Target: "Text";
                            Mode: BindingMode.OneWay;
                        }
                    ];
                 };
                Static { Text: "/"; };
                Static {
                    Bindings: [
                        {
                            Source: "MaxHealth";
                            Target: "Text";
                            Mode: BindingMode.OneWay;
                        }
                    ];
                 };
            ];
        };

        Static { Text: "Factions"; };
        Static {
            Bindings: [
                {
                    Source: "Factions";
                    Target: "Text";
                }
            ];
        };

        Static { Text: "Controller"; };
        Static {
            Bindings: [
                {
                    Source: "Controller";
                    Target: "Text";
                }
            ];
        };

        Static { Text: "Weapon"; };
        Static {
            Bindings: [
                {
                    Source: "Weapon";
                    Target: "Text";
                }
            ];
        };
    ];
}