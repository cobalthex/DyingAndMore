Table {
    BackgroundColor: [0 0 0 192];
    Name: "Entity info";
    Position: [20 20];
    VerticalAlignment: Alignment.Bottom;
    ColumnCount: 2;
    Margin: [10 2];

    Children: [
        Static { Text: "Name"; };
        Static {
            Bindings: [
                {
                    Source: "Name";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };

        Static { Text: "Class"; };
        Static {
            Bindings: [
                {
                    Source: "ClassName";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };

        Static { Text: "ID"; };
        Static {
            Bindings: [
                {
                    Source: "Id";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };

        Static { Text: "Is Alive"; };
        Static {
            Bindings: [
                {
                    Source: "IsAlive";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };

        #*
        Static { Text: "Active Animations"; };
        Static {
            Bindings: [
                {
                    Source: "ActiveAnimations";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };
        *#

        # actor properties

        Static { Text: "Health"; };
        List {
            Direction: Direction.Horizontal;
            Margin: 5;
            Children: [
                Static {
                    Bindings: [
                        {
                            Source: "CurrentHealth";
                            Target: "Text";
                            Mode: BindingMode.OneWay;
                        }
                    ];
                    AutoSizeOnBindingUpdate: true;
                    Size: [60 20];
                 };
                Static { Text: "/"; };
                Static {
                    Bindings: [
                        {
                            Source: "MaxHealth";
                            Target: "Text";
                            Mode: BindingMode.OneWay;
                        }
                    ];
                    AutoSizeOnBindingUpdate: true;
                    Size: [60 20];
                 };
            ];
        };

        Static { Text: "Factions"; };
        Static {
            Bindings: [
                {
                    Source: "Factions";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };

        Static { Text: "Controller"; };
        Static {
            Bindings: [
                {
                    Source: "Controller";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };
        
        Static { Text: "Weapon"; };
        Static {
            Bindings: [
                {
                    Source: "Weapon";
                    Target: "Text";
                }
            ];
            AutoSizeOnBindingUpdate: true;
            Size: [300 20];
        };
    ];
}