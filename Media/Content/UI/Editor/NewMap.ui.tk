List {
    BackgroundColor: Color.Gray;
    Margin: 10;
    Padding: [10 10];
    HorizontalAlignment: Alignment.Middle;
    VerticalAlignment: Alignment.Middle;
    Children: [
        Static {
            Text: "Create a New Map";
            Font: @"Fonts/UILarge.bfnt";
            Color: Color.White;
            HorizontalAlignment: Alignment.Middle;
        }

        Static {
            Text: "Name";
        }
        TextInput {
            Name: "name";
            MaxLength: 64;
            HorizontalAlignment: Alignment.Stretch;
        }

        Table {
            Direction: Direction [ Horizontal ];
            HorizontalAlignment: Alignment.Stretch;
            Margin: 10;
            ColumnCount: 2;
            Children: [
                Static {
                    Text: "Width";
                }
                Static {
                    Text: "Height";
                    HorizontalAlignment: Alignment.Start;
                }

                NumericInput {
                    Name: "width";
                    Minimum: 1;
                    Maximum: 256;
                    HorizontalAlignment: Alignment.Stretch;
                    Width: 120;
                }
                NumericInput {
                    Name: "height";
                    Minimum: 1;
                    Maximum: 256;
                    HorizontalAlignment: Alignment.Stretch;
                    Width: 120;
                }
            ]
        }

        Static {
            Text: "Tileset";
            HorizontalAlignment: Alignment.Start;
        }

        FileInput {
            Name: "tileset";
            Filter: "Tilesets (*.tiles.tk)|*.tiles.tk";
            HorizontalAlignment: Alignment.Stretch;
        }

        List {
            Direction: Direction.Horizontal;
            Margin: 10;
            HorizontalAlignment: Alignment.Stretch;
            Children: [
                Static {
                    Name: "create";
                    Text: "Create";
                    Font: @"Fonts/UILarge.bfnt";
                    HorizontalAlignment: Alignment.Stretch;
                }

                Static {
                    Action: "$Close";
                    Text: "Cancel";
                    Font: @"Fonts/UILarge.bfnt";
                    HorizontalAlignment: Alignment.Stretch;
                }
            ]
        }
    ]
}