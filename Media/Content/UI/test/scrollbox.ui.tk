ScrollBox {
	Size: 400;
	HorizontalAlignment: ALignment.Middle;
	VerticalAlignment: ALignment.Middle;
	BorderColor: Color.White;
	InnerPadding: 10;

	Children: [
		Static {
			Size: 600;
			Position: 30;
			BackgroundColor: [48 0 128 192];
			Children: [
				Graphic {
					Position: 100;
					Size: 500;
					Sprite: @"test.png";
				}
				Graphic {
					Position: 200;

					Sprite: {
						texture: @"other/animation.png";
						width: 34;
						height: 49;
						cliprect: [0 49 340 49];
						framecount: 10;
						framelength: 100msec;
						IsLooping: true;
					}
				}
			];
		};
	];
}