ProjectileClass {
    Name: "Missile";
    MuzzleVelocity: 500;
    DestroyIfOffscreen: True;
    IgnoreTrace: True;
    Range: 200;

    FadeEffect: {
        Effects: [
            EntityEffect {
                Class: @.;
                Count: 1;
                Speed: 500;
                Spread: -10deg;
            };

            EntityEffect {
                Class: @.;
                Count: 1;
                Speed: 500;
                Spread: 10deg;
            };
        ];
    }

    DestructionEffect: @"Effects/Splatter.fx.tk";

    Animations: {
        Idle: {
            Sprite: {
                Texture: @"./DeathMachine.png";
            };
            Effect: @"Effects/trail.fx.tk";
        }
    }
}