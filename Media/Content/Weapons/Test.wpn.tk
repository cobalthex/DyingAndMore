GunClass {
    MaxAmmo: 100;
	RoundsPerBurst: 1;
    ProjectilesPerRound: 3;
    MaxBursts: 0;
    Projectile: @"Weapons/Projectiles/Missile.ent.tk";
    ErrorAngle: [-8deg 8deg];

    ChargeTime: 0msec;
    DischargeTime: 300msec;

    DischargeEffect: { #move to spawn effect on projectile?
        Effects: [
            EntityEffect {
                Class: @"Actors/InfectedCell.ent.tk";
                Count: [1 2];
                Spread: [-90deg 90deg];
                Speed: [400 800];
                Radius: 100;
            }
            ParticleEffect {
                Class: {
                    Graphic: {
                        Texture: @"./MuzzleFlash.png";
                        width: 48;
                        height: 48;
                        frameLength: 40msec;
                        frameCount: 4;
                        Center: true;
                    };
                    Blend: BlendState.AlphaBlend;
                    InitialSpeed: [0 0];
                    Drag: 1.3;
                    lifetime: [160msec 160msec];
                }
                Count: [3 12];
                Spread: [-30deg 30deg];
            };

            SoundImpulse {
                Class: {
                    sound: "open_fx.ogg";
                    gain: 0.1;
                }
            }
        ]
    }
}