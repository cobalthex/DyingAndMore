GunClass {
    Projectile: @"Weapons/Projectiles/Pellet.ent.tk";

    MaxAmmo: 1000;
    RoundsPerBurst: 1;
    #ProjectilesPerRound: 6;
    MaxBursts: 0;
    ChargeTime: 0msec;
    DischargeTime: 30msec;
    ErrorAngle: [-4deg 4deg];

    DischargeEffect: { #move to spawn effect on projectile?
        Effects: [
            ParticleEffect {
                Class: {
                    Sprite: {
                        Texture: @"./MuzzleFlash.png";
                        width: 48;
                        height: 48;
                        frameLength: 40msec;
                        frameCount: 4;
                        Center: true;
                    };
                    Blend: BlendState.AlphaBlend;
                    InitialSpeed: [0 0];
                    Drag: 1.3;
                    lifetime: [160msec 160msec];
                }
                Count: [3 12];
                Spread: [-30deg 30deg];
            };

            SoundImpulse {
                Class: {
                    sound: @"open_fx.ogg";
                    gain: 0.1;
                }
            }
        ]
    }
}


