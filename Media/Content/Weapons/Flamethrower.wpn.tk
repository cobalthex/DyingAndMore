GunClass {
    MaxAmmo: 20000;

    DischargeEffect: {
        Effects: [
            ParticleEffect {
                Count: 10;
                Spread: [-10deg 10deg];
                Class: {
                    Sprite: {
                        Texture: @"Effects/fire.png";
                        width: 96;
                        height: 48;
                        Origin: [24 24];
                    };
                    Blend: {
                        # only draw on entities
                        #ColorSourceBlend: Blend.DestinationColor;
                        #ColorDestinationBlend: Blend.One;
                        #AlphaSourceBlend: Blend.Zero;
                        #AlphaDestinationBlend: Blend.DestinationAlpha;

                        # dark fire
                        ColorSourceBlend: Blend.SourceAlpha;
                        ColorDestinationBlend: Blend.One;
                        AlphaSourceBlend: Blend.InverseSourceAlpha;
                        AlphaDestinationBlend: Blend.One;

                        # ghost fire
                        #ColorSourceBlend: Blend.SourceColor;
                        #ColorDestinationBlend: Blend.BlendFactor;
                        #AlphaSourceBlend: Blend.Zero;
                        #AlphaDestinationBlend: Blend.One;
                    };
                    InitialSpeed: [600 1200];
                    Drag: 1.0;
                    lifetime: [600msec 1200msec];
                    ColorOverTime: {
                        Reverse: false;
                        Values: [
                            [0 [32 64 128 255]];
                            [0.1 Color.SteelBlue];
                            #[0.5 Color.Orange];
                            #[1 Color.Red];
                            [0.25 Color.White];
                            [0.3 Color.Yellow];
                            [0.5 Color.Orange];
                            [0.6 [100 0 0 255]];
                            [1 [0 0 0 0]];
                        ];
                    };

                    ScaleOverTime: {
                        IsLinear: true;
                        Values: [
                            [0 0.25]
                            [0.7 2]
                            [1 0]
                        ];
                    };
                    #*AngleOverTime: {
                        Values: [
                            [0 0];
                            [0.1 45deg];
                            [0.4 0deg];
                            [1 -45deg];
                        ];
                    };*#


                    CollisionEffect: {
                        Effects: [
                            #*AreaHealthEffect {
                                MaxDamage: 3;
                                Radius: 0;
                                CanAffectSource: false;
                            }*#
                            ConditionEffect {
                                Condition: @"Actors/Conditions/fire.cond.tk";
                                Radius: 10;
                                Duration: 5sec;
                                AcquireChance: 80%;
                            }
                        ];
                    }
                }
            };
        ]
    }
}