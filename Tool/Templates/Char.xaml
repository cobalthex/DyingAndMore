<UserControl x:Class="Tool.Types.Char"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tool"
             xmlns:Types="clr-namespace:Tool.Types"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="200">
    <UserControl.Resources>
        <Types:CharToIntConverter x:Key="C2IConv" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <local:IntegerUpDown Grid.Column="0" Value="{Binding Value, Converter={StaticResource C2IConv}, UpdateSourceTrigger=PropertyChanged}" Minimum="0" Maximum="{x:Static Types:Char.MaxValue}" StepValue="1"/>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0,0,0" Text="{Binding Value}"/>
    </Grid>
</UserControl>
